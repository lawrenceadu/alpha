<?php
    require __DIR__.'/vendor/autoload.php';

    use Symfony\Component\Console\Application;

    // use commands
    use \App\Command\GenerateMigrationCommand;
    use \App\Command\GenerateModelCommand;
    use \App\Command\GenerateHelperCommand;
    use \App\Command\GenerateControllerCommand;
    use \App\Command\DatabaseMigrationCommand;
    use \App\Command\DeleteControllerCommand;
    use \App\Command\ServerCommand;

    $app = new Application();

    // ... register commands
    $app->add(new GenerateMigrationCommand());
    $app->add(new GenerateModelCommand());
    $app->add(new GenerateHelperCommand());
    $app->add(new GenerateControllerCommand());
    $app->add(new DatabaseMigrationCommand());
    $app->add(new DeleteControllerCommand());
    $app->add(new ServerCommand());

    $app->run();